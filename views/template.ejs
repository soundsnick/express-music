<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/assets/styles.css">
    <title><%= pageTitle %></title>
</head>
<body>
    <div class="header">
        <div class="container">
            <h1 class="logo">
                <a href="/">CrossRoad</a>
            </h1>
            <nav class="navigation">
                <% if(session.auth) { %>
                    <a href="/add" class="navigation__item">Добавить трек</a>
                    <a href="/logout" class="navigation__item">Выйти</a>
                <% }else { %>
                    <a href="/login" class="navigation__item">Войти</a>
                    <a href="/register" class="navigation__item">Регистрация</a>
                <% } %>
            </nav>
        </div>
    </div>
    <div id="app">
        <%- yield %>
    </div>
</body>
</html>