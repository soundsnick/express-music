<div class="container">
    <h1>Свежие треки</h1>
    <div class="grid-last">
        <% lastTracks.forEach((track) => { %>
            <div class="track">
                <div class="track__cover" style="background-image: url('/public/uploads/covers/<%= track.cover %>')"></div>
                <div class="track__meta">
                    <span class="track__title"><%= track.title %></span>
                    <span class="track__artist"><%= track.artist %></span>
                    <span class="track__author"><%= track.author %></span>
                </div>
            </div>
        <% }) %>
    </div>
</div>