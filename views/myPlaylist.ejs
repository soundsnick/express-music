<div class="container">
    <% if(typeof message != "undefined") { %><div class="notice"><%= message %></div><% } %>
    <h1 class="title">Мой плейлист</h1>
    <div class="grid-last">
        <% lastTracks.forEach((track) => { %>
            <div class="track--wrapper">
                <div class="track">
                    <div class="track__cover" style="background-image: url('/public/uploads/covers/<%= track.cover %>')"></div>
                    <div class="track__meta">
                        <span class="track__title"><%= track.title %></span>
                        <span class="track__artist">Исполнитель: <%= track.artist %></span>
                        <span class="track__author">Автор: <%= track.author %></span>
                    </div>
                    <a href="/remove/favourite?id=<%= track.id %>" class="add-favourite">Удалить из плейлиста</a>
                </div>
                <div class="track-player">
                    <audio controls>
                        <source src="/public/uploads/tracks/<%= track.track %>" type="audio/mpeg">
                        Your browser does not support the audio element.
                    </audio>
                </div>
            </div>
        <% }) %>
    </div>
</div>